<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>distribution</id>
	<formats>
		<format>zip</format>
	</formats>

	<dependencySets>

		<dependencySet>
			<unpack>false</unpack>
			<outputDirectory>lib/mandatory</outputDirectory>
			<excludes>
				<exclude>com.google.guava:guava</exclude>
				<exclude>br.com.caelum:iogi</exclude>
				<exclude>javassist:javassist</exclude>
				<exclude>org.slf4j:slf4j-api</exclude>
				<exclude>net.vidageek:mirror</exclude>
				<exclude>org.objenesis:objenesis</exclude>
				<exclude>com.thoughtworks.paranamer:paranamer</exclude>
				<exclude>net.sf.scannotation:scannotation</exclude>
				<exclude>com.thoughtworks.xstream:xstream</exclude>
				<exclude>ognl:ognl</exclude>
			</excludes>
		</dependencySet>

		<dependencySet>
			<unpack>false</unpack>
			<outputDirectory>lib/logging</outputDirectory>
			<excludes>
				<exclude>org.slf4j:slf4j-log4j12</exclude>
				<exclude>log4j:log4j</exclude>
				<exclude>commons-logging:commons-logging</exclude>
			</excludes>
		</dependencySet>

		<dependencySet>
			<unpack>false</unpack>
			<outputDirectory>lib/providers/springframework</outputDirectory>
			<excludes>
				<exclude>org.aspectj:aspectjrt</exclude>
				<exclude>org.springframework:spring-aop</exclude>
				<exclude>org.springframework:spring-asm</exclude>
				<exclude>org.springframework:spring-beans</exclude>
				<exclude>org.springframework:spring-context</exclude>
				<exclude>org.springframework:spring-core</exclude>
				<exclude>org.springframework:spring-expression</exclude>
				<exclude>org.springframework:spring-web</exclude>
			</excludes>
		</dependencySet>

		<dependencySet>
			<unpack>false</unpack>
			<outputDirectory>lib/providers/guice</outputDirectory>
			<excludes>
				<exclude>org.aspectj:aspectjrt</exclude>
				<exclude>aopalliance:aopalliance</exclude>
				<exclude>com.google.inject:guice</exclude>
				<exclude>com.google.inject.extensions:guice-multibindings</exclude>
			</excludes>
		</dependencySet>

		<dependencySet>
			<unpack>false</unpack>
			<outputDirectory>lib/providers/cdi</outputDirectory>
			<excludes>
				<exclude>javax.annotation:javax.annotation-api</exclude>
				<exclude>javax.inject:javax.inject</exclude>
				<exclude>javax.ejb:ejb-api</exclude>
				<exclude>javax.enterprise:cdi-api</exclude>
				<exclude>javax.el:el-api</exclude>
				<exclude>org.jboss.spec.javax.interceptor:jboss-interceptors-api_1.1_spec</exclude>
			</excludes>
		</dependencySet>

		<dependencySet>
			<unpack>false</unpack>
			<outputDirectory>lib/providers/pico</outputDirectory>
			<excludes>
				<exclude>javax.annotation:javax.annotation-api</exclude>
				<exclude>org.picocontainer:picocontainer</exclude>
			</excludes>
		</dependencySet>

		<dependencySet>
			<unpack>false</unpack>
			<outputDirectory>lib/serialization</outputDirectory>
			<excludes>
				<exclude>org.codehaus.jettison:jettison</exclude>
				<exclude>stax:stax-api</exclude>
				<exclude>xpp3:xpp3_min</exclude>
				<exclude>com.google.code.gson:gson</exclude>
			</excludes>
		</dependencySet>

		<dependencySet>
			<unpack>false</unpack>
			<outputDirectory>lib/validation</outputDirectory>
			<excludes>
				<exclude>javax.validation:validation-api</exclude>
				<exclude>org.hibernate:hibernate-validator</exclude>
				<exclude>org.jboss.logging:jboss-logging</exclude>
				<exclude>com.fasterxml:classmate</exclude>
				<exclude>org.glassfish.web:javax.el</exclude>
				<exclude>javax.el:javax.el-api</exclude>
				<exclude>javax.annotation:jsr250-api</exclude>
				<exclude>org.hamcrest:hamcrest-core</exclude>
				<exclude>org.hamcrest:hamcrest-library</exclude>
			</excludes>
		</dependencySet>

		<dependencySet>
			<unpack>false</unpack>
			<outputDirectory>lib/jodatime</outputDirectory>
			<excludes>
				<exclude>joda-time:joda-time</exclude>
			</excludes>
		</dependencySet>

		<dependencySet>
			<unpack>false</unpack>
			<outputDirectory>lib/upload</outputDirectory>
			<excludes>
				<exclude>commons-fileupload:commons-fileupload</exclude>
				<exclude>commons-io:commons-io</exclude>
			</excludes>
		</dependencySet>
	</dependencySets>
  
	<fileSets>
		<!-- parent -->
		<fileSet>
			<includes>
				<include>src/</include>
				<include>README*</include>
				<include>LICENSE*</include>
				<include>pom.xml</include>
			</includes>
		</fileSet>

		<fileSet>
			<directory>target</directory>
			<outputDirectory>/</outputDirectory>
			<includes>
				<include>apidocs/**</include>
				<include>vraptor-${project.version}.jar</include>
			</includes>
		</fileSet>
	</fileSets>
</assembly>
